{
  "name": "ts-base-x",
  "type": "module",
  "version": "0.0.0",
  "description": "A base-x encoding and decoding library.",
  "author": "Chris Breuer <chris@stacksjs.org> (https://github.com/chrisbbreuer)",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/ts-security#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/ts-security.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/ts-security/issues"
  },
  "keywords": [
    "base-x",
    "base",
    "x",
    "encoding",
    "decoding",
    "crypto",
    "cryptography",
    "base64",
    "base58",
    "base32",
    "base16",
    "base10",
    "base8",
    "bun",
    "stacks",
    "node-forge",
    "typescript",
    "javascript"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["README.md", "dist"],
  "scripts": {
    "build": "bun build.ts",
    "lint": "bunx --bun eslint .",
    "lint:fix": "bunx --bun eslint . --fix",
    "fresh": "bunx rimraf node_modules/ bun.lock && bun i",
    "changelog": "bunx changelogen --output CHANGELOG.md",
    "prepublishOnly": "bun --bun run build",
    "release": "bun run changelog && bunx bumpp package.json --all",
    "test": "bun test",
    "typecheck": "bun --bun tsc --noEmit"
  },
  "devDependencies": {
    "@stacksjs/docs": "^0.69.3",
    "@stacksjs/eslint-config": "^4.2.1-beta.1",
    "@types/bun": "^1.2.3",
    "bun-plugin-dtsx": "^0.21.9",
    "typescript": "^5.7.3"
  },
  "overrides": {
    "unconfig": "0.3.10"
  },
  "simple-git-hooks": {
    "pre-commit": "bun lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": "bunx eslint . --fix"
  }
}
